{
  "name": "console-patterns",
  "description": "Collection of snippets to render logical patterns",
  "version": "1.0.0",
  "repository": "git@github.com:grikomsn/console-patterns.git",
  "author": "Griko Nibras <git@griko.id>",
  "scripts": {
    "build": "yarn build:dir && yarn build:favicons && gatsby build",
    "build:dir": "mkdirp ./public/icons/",
    "build:favicons": "node scripts/favicons",
    "cbs": "yarn clean && yarn build && yarn serve",
    "clean": "gatsby clean",
    "create-index": "npx create-index ./patterns ./src/components ./src/helpers && yarn format",
    "develop": "gatsby develop",
    "format": "prettier --write {patterns,src}/**/*.js",
    "serve": "gatsby serve"
  },
  "dependencies": {
    "@sindresorhus/class-names": "^1.1.0",
    "copee": "^1.0.6",
    "gatsby": "^2.20.12",
    "gatsby-image": "^2.3.1",
    "gatsby-plugin-react-helmet": "^3.2.1",
    "gatsby-plugin-remove-serviceworker": "^1.0.0",
    "gatsby-plugin-sharp": "^2.5.4",
    "gatsby-plugin-styled-components": "^3.2.1",
    "gatsby-source-filesystem": "^2.2.2",
    "gatsby-transformer-json": "^2.3.1",
    "prism-react-renderer": "^1.0.2",
    "prismjs": "^1.20.0",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-helmet": "^5.2.1",
    "styled-components": "^5.0.1",
    "tachyons": "^4.11.1"
  },
  "devDependencies": {
    "@types/react": "^16.9.32",
    "@types/react-dom": "^16.9.6",
    "create-index": "^2.5.0",
    "favicons": "^6.0.0",
    "mkdirp": "^1.0.4",
    "node-gyp": "^6.1.0",
    "prettier": "^2.0.3"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "license": "MIT"
}
